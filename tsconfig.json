{
	"compilerOptions": {
		"typeRoots": ["typings", "node_modules/@types"],
		"module": "commonjs",
		"target": "es2019",
		"outDir": "build",
		"strict": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"preserveSymlinks": true,
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
	},
	"include": [
		"./lib/**/*",
		"./bin/**/*"
	]
}
